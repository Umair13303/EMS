@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/angular.min.js"></script>
<script src="~/Common/CommonScripts/AngularService/GlobalServices.js"></script>
<script src="~/Areas/Account/Scripts/PCRReportManagment_UI_Script/View_PCRLedger_UI_Presenter.js"></script>
<div class="statbox widget box box-shadow">
    <div class="widget-header">
        <div class="row">
            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                <h4>@ViewBag.Title</h4>
            </div>
        </div>
        <nav class="breadcrumb-one" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0);"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg></a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0);">Accounts</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0);">Petty Cash Register</a></li>
                <li class="breadcrumb-item active" aria-current="page"><span> @ViewBag.Title</span></li>
            </ol>
        </nav>
    </div>
</div>

<div ng-app="View_PCRLedger_UI" ng-controller="View_PCRLedger_UIController" class="bg-light min-vh-100 p-4">

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card rounded-4 border-0 bg-white p-3 shadow-sm">
                <small class="text-uppercase fw-bold text-muted opacity-75" style="font-size: 0.7rem; letter-spacing: 0.5px;">Opening</small>
                <div class="fs-4 fw-bold font-monospace mt-1">{{PCRKPISummary.Opening | number:2}}</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card rounded-4 border-0 bg-white p-3 shadow-sm">
                <small class="text-uppercase fw-bold text-success opacity-75" style="font-size: 0.7rem; letter-spacing: 0.5px;">Inflow (+)</small>
                <div class="fs-4 fw-bold font-monospace text-success mt-1">{{PCRKPISummary.Credit | number:2}}</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card rounded-4 border-0 bg-white p-3 shadow-sm">
                <small class="text-uppercase fw-bold text-danger opacity-75" style="font-size: 0.7rem; letter-spacing: 0.5px;">Outflow (-)</small>
                <div class="fs-4 fw-bold font-monospace text-danger mt-1">{{PCRKPISummary.Debit | number:2}}</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card rounded-4 bg-dark border-0 p-3 text-white shadow-sm">
                <small class="text-uppercase fw-bold opacity-50" style="font-size: 0.7rem; letter-spacing: 0.5px;">Net Balance</small>
                <div class="fs-4 fw-bold font-monospace mt-1">{{PCRKPISummary.Closing | number:2}}</div>
            </div>
        </div>
    </div>

    <div class="card rounded-4 mb-4 border-0 shadow-sm">
        <div class="card-body p-3">
            <div class="row align-items-center g-3" style="position: relative;z-index: 1050;">
                <div class="d-flex align-items-center col-auto gap-2">
                    <input type="date" class="form-control form-control-sm rounded-3 px-3" ng-model="DataTableSetting.Filter.StartDate" date-picker-simple>
                    <span class="text-muted small">to</span>
                    <input type="date" class="form-control form-control-sm rounded-3 px-3" ng-model="DataTableSetting.Filter.EndDate" date-picker-simple>
                </div>
                <div class="col-auto">
                    <div class="vr h-100 text-muted mx-2 opacity-25"></div>
                </div>
                <div class="col" style="position: relative;z-index: 1050;">
                    <div class="input-group">
                        <input type="text" class="form-control border-start-0 rounded-end-3" placeholder="Search by description or reference..." ng-model="DataTableSetting.Filter.Search" ng-change="RefreshUI()">
                    </div>
                </div>
                <div class="col-auto text-end">
                    <button class="btn btn-dark btn-sm rounded-3 fw-bold px-4 py-2" ng-click="Initialize()">Search</button>
                </div>
            </div>
        </div>
    </div>

    <div class="card rounded-4 overflow-hidden border-0 shadow-sm" style="position: relative; z-index: 1;">
        <div class="card-header border-0 bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted" style="font-size: 0.75rem;">
                    Showing <b>{{ (DataTableSetting.DataFetchSetting.PageNumber * 10000) + 1 | number }}</b>
                    to <b>{{ (DataTableSetting.DataFetchSetting.PageNumber + 1) * 10000 | number }}</b>
                    of <b>{{ DataTableSetting.DBRecordCount | number }}</b> records
                </div>

                <button class="btn btn-outline-primary btn-sm rounded-pill px-3"
                        style="font-size: 0.7rem;"
                        ng-if="DataTableSetting.DBRecordCount > (DataTableSetting.DataFetchSetting.PageNumber + 1) * 10000"
                        ng-click="LoadNextBatch()">
                    Load Next Batch (10k)
                </button>
            </div>
        </div>

        <div class="table-responsive" style="max-height: 500px;">
            <table class="table-hover mb-0 table align-middle" style="font-size: 0.85rem;">
                <thead class="table-light sticky-top shadow-sm">
                    <tr>
                        <th class="border-0 py-3 ps-4">Date</th>
                        <th class="border-0">Description</th>
                        <th class="border-0 text-end">Credit</th>
                        <th class="border-0 text-end">Debit</th>
                        <th class="border-0 pe-4 text-end">Balance</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    <tr ng-repeat="item in DataTableSetting.PagedLedgerList" class="border-bottom-0">
                        <td class="text-muted py-3 ps-4">{{item.TransactionDate | date:'dd-MMM-yyyy'}}</td>
                        <td class="fw-medium text-dark">{{item.Description}}</td>
                        <td class="font-monospace text-success fw-bold text-end">
                            {{item.Credit > 0 ? (item.Credit | number:2) : '—'}}
                        </td>
                        <td class="font-monospace text-danger fw-bold text-end">
                            {{item.Debit > 0 ? (item.Debit | number:2) : '—'}}
                        </td>
                        <td class="font-monospace fw-bold text-dark pe-4 text-end">
                            {{item.Balance > 0 ? (item.Balance | number:2) : '—'}}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="card-footer border-top-0 bg-white px-4 py-3">
            <div class="d-flex justify-content-between align-items-center">
                <span class="text-muted small">
                    Page <b>{{DataTableSetting.DefaultPage + 1}}</b> of <b>{{DataTableSetting.TotalPage}}</b>
                </span>
                <div class="btn-group shadow-xs">
                    <button class="btn btn-light btn-sm border px-4" ng-disabled="DataTableSetting.DefaultPage == 0" ng-click="SetPage(-1)">
                        <i class="fa fa-chevron-left small me-1"></i> Previous
                    </button>
                    <button class="btn btn-light btn-sm border px-4" ng-disabled="DataTableSetting.DefaultPage >= DataTableSetting.TotalPage - 1" ng-click="SetPage(1)">
                        Next <i class="fa fa-chevron-right small ms-1"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

