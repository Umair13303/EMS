@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    @@keyframes blinker {
        50% {
            opacity: 0;
        }
    }

    .blink-effect {
        animation: blinker 3s linear infinite;
    }

    .sticky-top {
        position: sticky;
        top: 0;
        z-index: 10;
        background: #f8f9fa;
    }

    .btn-xs {
        padding: 1px 5px;
        font-size: 0.7rem;
        line-height: 1.5;
    }

    .table-responsive::-webkit-scrollbar {
        width: 6px;
    }

    .table-responsive::-webkit-scrollbar-thumb {
        background: #ccc;
        border-radius: 10px;
    }
    /* Added style for disabled state visual feedback */
    .btn-primary:disabled {
        cursor: not-allowed;
        opacity: 0.7;
    }
</style>

<script src="~/Scripts/angular.min.js"></script>
<script src="~/Common/CommonScripts/AngularService/GlobalServices.js"></script>
<script src="~/Areas/Account/Scripts/PCRIncomeManagment_UI_Script/CreateUpdate_PCRIncome_UIPresenter.js"></script>


<div class="statbox widget box box-shadow">
    <div class="widget-header">
        <div class="row">
            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                <h4>@ViewBag.Title</h4>
            </div>
        </div>
        <nav class="breadcrumb-one" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0);"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg></a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0);">Accounts</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0);">Petty Cash Register</a></li>
                <li class="breadcrumb-item active" aria-current="page"><span>Add Incoming</span></li>
            </ol>
        </nav>
    </div>
</div>
<div ng-app="CreateUpdate_PCRIncome_UI" ng-controller="CreateUpdate_PCRIncome_UIController" style="margin-top:5px">
    <form name="PCRIncomeForm" novalidate>
        <div class="row g-3">
            <div class="col-md-4">
                <div class="card rounded shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center fw-bold">
                        <span>Add Petty Cash Register Entry</span>
                        <button type="button" class="btn btn-sm btn-outline-secondary" ng-click="ResetForm()">Reset</button>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Date</label>
                                <input type="text" name="TransactionDate" id="TextBoxTransactionDate" class="form-control" ng-model="PCRIncome.TransactionDate" date-picker-simple required>
                                <div class="text-danger mt-1" ng-show="PCRIncomeForm.TransactionDate.$touched && PCRIncomeForm.TransactionDate.$invalid">Date is required.</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Transaction ID</label>
                                <input type="text" name="TransactionID" id="TextBoxTransactionID" class="form-control" placeholder="ID" ng-model="PCRIncome.TransactionID">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Payment Through</label>
                                <select class="form-select" name="PaymentThroughId" id="DropDownListPaymentThroughId" ng-model="PCRIncome.PaymentThroughId"  ng-options="p.Id as p.Description for p in PaymentThroughList track by p.Id" select2 required>
                                </select>
                                <div class="text-danger mt-1" ng-show="PCRIncomeForm.PaymentThroughId.$touched && PCRIncomeForm.PaymentThroughId.$invalid">Select a method.</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label">Amount</label>
                                <input type="number" name="Amount" id="TextBoxAmount" class="form-control" placeholder="0.00" ng-model="PCRIncome.Amount" min="0.01" required>
                                <div class="text-danger mt-1" ng-show="PCRIncomeForm.Amount.$touched && PCRIncomeForm.Amount.$invalid">Required (> 0).</div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea name="Description" id="TextBoxDescription" class="form-control"  placeholder="Enter description" ng-model="PCRIncome.Description" required rows="2"></textarea>
                            <div class="text-danger mt-1" ng-show="PCRIncomeForm.Description.$touched && PCRIncomeForm.Description.$invalid">Description is required.</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Remarks</label>
                            <textarea name="Remarks" id="TextBoxRemarks" class="form-control" placeholder="Optional notes" ng-model="PCRIncome.Remarks" rows="2"></textarea>
                        </div>
                    </div>

                    <div class="card-footer text-end">
                        <button type="button" id="ButtonSubmitDown" class="btn btn-primary px-4"
                                ng-click="UpsertDataIntoDB()"
                                ng-disabled="IsProcessing || PCRIncomeForm.$invalid">
                            <span ng-show="IsProcessing"><i class="fa fa-spinner fa-spin me-1"></i> Saving...</span>
                            <span ng-hide="IsProcessing">{{ IsEditMode ? 'Update Cash Record' : 'Add Cash Record' }}</span>
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card bg-light mb-3 border-0 shadow-sm">
                    <div class="card-body p-2">
                        <div class="row g-2">
                            <div class="col-md-6">
                                <div class="border-start border-success border-3 shadow-xs rounded bg-white p-2">
                                    <small class="text-muted d-block" style="font-size: 0.65rem;">Total Received</small>
                                    <span class="fw-bold text-success" style="font-size: 1rem;">{{ PCRKPISummary.SummaryPCRIncome | number:2 }}</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="border-start border-dark border-3 shadow-xs rounded bg-white p-2">
                                    <small class="text-muted d-block" style="font-size: 0.65rem;">Received In: @DateTime.Now.ToString("MMMM")</small>
                                    <span class="fw-bold text-dark" style="font-size: 1rem;">{{ PCRKPISummary.MonthlyPCRIncome | number:2 }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card rounded border-0 shadow-sm">
                    <div class="card-header bg-white py-2">
                        <div class="row align-items-center">
                            <div class="col-md-3">
                                <span class="fw-bold small">Income Details</span>
                                <div class="text-primary" style="font-size: 0.7rem;">
                                    Found: <strong>{{DataTableSetting.FilteredIncomeList.length}}</strong> records
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="card-body p-0">
                        <div class="table-responsive" style="max-height: 350px;">
                            <table class="table-bordered table-sm mb-0 table" style="font-size: 0.8rem;">
                                <thead class="table-light sticky-top">
                                    <tr>
                                        <th class="px-2">Date</th>
                                        <th class="px-2">Description</th>
                                        <th class="px-2">Payment Mode</th>
                                        <th class="px-2 text-end">Amount</th>
                                        <th class="px-2 text-center" style="width: 80px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="item in DataTableSetting.FilteredIncomeList | startFrom:DataTableSetting.DefaultPage*DataTableSetting.RecordLength | limitTo:DataTableSetting.RecordLength track by item.GuID">
                                        <td class="px-2 align-middle">{{item.TransactionDate | date:'dd-MMM-yyyy'}}</td>
                                        <td class="text-truncate px-2 align-middle" style="max-width: 250px;">{{item.Description}}</td>
                                        <td class="small text-muted px-2 align-middle">{{ Get_PaymentMethod_ById(item.PaymentThroughId) }}</td>
                                        <td class="fw-bold text-success px-2 text-end align-middle">{{item.Amount | number:2}}</td>
                                        <td class="text-center align-middle">
                                            <a href="javascript:void(0)" class="text-primary me-2" ng-click="Load_PCRIncome_InfoById(item, true)"><i class="fa fa-edit"></i></a>
                                            <a href="javascript:void(0)" class="text-danger" ng-click="Delete_PCRIncome_ById(item.GuID)"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                    <tr ng-if="DataTableSetting.FilteredIncomeList.length === 0">
                                        <td colspan="5" class="text-muted py-3 text-center">No records found.</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="card-footer d-flex justify-content-between align-items-center bg-white">
                        <small class="text-muted">Page {{DataTableSetting.DefaultPage + 1}} of {{numberOfPages()}}</small>
                        <div class="btn-group">
                            <button class="btn btn-xs btn-outline-secondary" ng-disabled="DataTableSetting.DefaultPage == 0" ng-click="DataTableSetting.DefaultPage = DataTableSetting.DefaultPage - 1">Prev</button>

                            <button class="btn btn-xs btn-outline-secondary"
                                    ng-disabled="DataTableSetting.DefaultPage >= (DataTableSetting.FilteredIncomeList.length / DataTableSetting.RecordLength) - 1"
                                    ng-click="DataTableSetting.DefaultPage = DataTableSetting.DefaultPage + 1">
                                Next
                            </button>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>
</div>